<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LaunchTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimationActivity">
        <!-- A1启动A2时，A2从屏幕上出现的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/open_main</item>
        <!-- A1启动A2时，A1从屏幕上消失的动画-->
        <item name="android:activityOpenExitAnimation">@anim/close_main</item>
        <!-- A2回退A1时，A1从屏幕上出现的动画-->
        <item name="@android:activityCloseEnterAnimation">@anim/open_next</item>
        <!-- A2回退A1时，A2从屏幕上消失的动画-->
        <item name="android:activityCloseExitAnimation">@anim/close_next</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@color/title_background</item>
    </style>

    <style name="BottomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@mipmap/bottom_bg</item>
    </style>

    <style name="BackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:src">@mipmap/icon_back</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/text_white_0</item>
    </style>

    <style name="RadioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_color_radio_checked</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="TopButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/rc_btn_send</item>
        <item name="android:textColor">@color/text_white_0</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/rc_btn_send</item>
        <item name="android:textColor">@color/text_white_0</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="MyRadioStyle">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="ButtonWhiteStyle" parent="@style/ButtonStyle">
        <item name="android:background">@drawable/button_white_selector</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="ButtonRedStyle" parent="@style/ButtonStyle">
        <item name="android:textColor">@drawable/text_color_menu_selected</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColorHint">@color/text_normal</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@mipmap/input_bg</item>
    </style>


    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
    </style>

    <style name="TextViewRedStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:background">@color/btn_background_press</item>
        <item name="android:textColor">@color/text_white_0</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="EditTextStyleWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="AnimationPopupwindow">
        <item name="android:windowEnterAnimation">@anim/popupwindow_open</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_close</item>
    </style>

    <style name="ItemTextViewStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/laytou_frame_1dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 自定义ListView -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/grey</item>
    </style>

    <style name="heartRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/heart_rating_bar_full</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="CommonDialog" parent="@android:style/Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textAppearanceMedium">@style/MyAlertTextAppearance</item>
        <item name="android:gravity">center</item>
        <item name="android:borderlessButtonStyle">@style/MyBorderlessButton</item>
        <item name="android:windowTitleStyle">@style/MyWindowTitleStyle</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/checkbox_selector</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/checkbox_selector</item>
    </style>

    <style name="MyWindowTitleStyle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/MyAlertTitleStyle</item>
    </style>

    <style name="MyAlertTitleStyle">
        <item name="android:textColor">@color/title_background</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyAlertTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="MyBorderlessButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/text_inverse_selector</item>
    </style>



    <style name="SpinnerStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edittext_frame_1dp</item>
        <item name="android:drawableRight">@mipmap/icon_row_dow_black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxEms">3</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AnimPopupDir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="AnimPopupMenu">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <!-- Navigation Header -->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

</resources>
