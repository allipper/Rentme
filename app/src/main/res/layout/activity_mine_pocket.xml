<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey">

    <RelativeLayout
        android:id="@+id/title_top"
        style="@style/TitleStyle"
        android:layout_alignParentTop="true"
        android:background="@color/msg_title_background">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:onClick="back"
            android:padding="12dp"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:text="我的钱包"
            android:textColor="@color/msg_title_text_color"
            android:textSize="@dimen/text_size_18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_top"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:onClick="gotoPocketDetails">

            <com.android.youhu.widget.CircleImageView
                android:id="@+id/head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/icon_defaultheader"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="账户余额:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_18sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="￥120"
                android:textColor="@color/title_background"
                android:textSize="@dimen/text_size_19sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_row"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.android.youhu.widget.DrawableLeftCenterButton
                android:id="@+id/charge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_add"
                android:drawablePadding="8dp"
                android:gravity="center|center_vertical"
                android:onClick="charge"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="充值"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>

            <com.android.youhu.widget.DrawableLeftCenterButton
                android:id="@+id/withdraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_add"
                android:drawablePadding="8dp"
                android:gravity="center|center_vertical"
                android:onClick="withdraw"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="提现"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@mipmap/icon_add"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="我的银行卡"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>

            <TextView
                android:id="@+id/card_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:drawableRight="@mipmap/icon_row"
                android:gravity="right|center_vertical"
                android:onClick="gotoMineCard"
                android:text="0张"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rc_divider"/>

        <LinearLayout
            android:id="@+id/pay_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@mipmap/icon_add"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="支付密码"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>

            <TextView
                android:id="@+id/pay_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:drawableRight="@mipmap/icon_row"
                android:gravity="right|center_vertical"
                android:onClick="gotoPayPwd"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>