<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.haiwaigou.com.ui.login.RegisterActivity">

    <RelativeLayout
        android:id="@+id/heard"
        style="@style/TitleStyle"
        android:layout_alignParentTop="true"
        android:background="@color/msg_title_background">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:padding="12dp"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:text="注册"
            android:textColor="@color/msg_title_text_color"
            android:textSize="@dimen/text_size_18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/heard"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <Button
                android:id="@+id/security_code"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/rc_btn_send"
                android:padding="4dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/input_cellno"
                style="@style/EditTextStyle"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/security_code"
                android:drawableLeft="@mipmap/cell"
                android:drawablePadding="16dp"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/input_cellno_tv"
                style="@style/EditTextStyle"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/security_code"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:visibility="gone"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/input_securitycode"
            style="@style/EditTextStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/confirm_msg"
            android:drawablePadding="16dp"
            android:hint="请输入验证码"
            android:paddingLeft="8dp"/>


        <EditText
            android:id="@+id/input_password"
            style="@style/EditTextStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="16dp"
            android:hint="请输入密码"
            android:paddingLeft="8dp"/>


        <EditText
            android:id="@+id/confor_password"
            style="@style/EditTextStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="16dp"
            android:hint="确认密码"
            android:paddingLeft="8dp"/>


        <RelativeLayout
            android:id="@+id/agreementrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="20dp">

            <CheckBox
                android:id="@+id/serve_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:clickable="true"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/serve_rule"
                android:text="确定注册并登录，表示你同意"
                android:textColor="@color/text_dark"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text1"
                android:text="服务条款"
                android:textColor="@color/text_blue"
                android:textSize="12sp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/confirm"
            style="@style/ButtonStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:onClick="register_enter"
            android:text="注册并登录"/>
    </LinearLayout>
</RelativeLayout>
