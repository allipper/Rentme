<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey">

    <RelativeLayout
        android:id="@+id/title_top"
        style="@style/TitleStyle"
        android:layout_alignParentTop="true"
        android:background="@color/msg_title_background">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:onClick="back"
            android:padding="12dp"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:text="支付订单"
            android:textColor="@color/msg_title_text_color"
            android:textSize="@dimen/text_size_18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="订单名称:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>

            <TextView
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:text="余额充值"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rc_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="订单总价:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>

            <TextView
                android:id="@+id/sumMoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:text="￥300"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

        </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rc_divider"/>
        <LinearLayout
            android:id="@+id/pocketmoneyll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="钱包余额:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>

            <TextView
                android:id="@+id/pocketmoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:text="￥210"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/rc_divider"/>
        <LinearLayout
            android:id="@+id/stillNeedll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="还需支付:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>
            <TextView
                android:id="@+id/stillNeed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="￥90"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rc_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="支付银行卡:"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16sp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rc_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="chooseCard"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/icon_row"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="后四位3320（招商银行）"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_14sp"
                android:onClick="chooseCard"/>

        </LinearLayout>


        <Button
            style="@style/ButtonStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:onClick="confirm"
            android:text="确认支付"/>


    </LinearLayout>

</RelativeLayout>