<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/grey">

    <RelativeLayout
        style="@style/TitleStyle"
        android:layout_alignParentTop="true"
        android:background="@color/msg_title_background">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:onClick="back"
            android:padding="12dp"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:text="订单详情"
            android:textColor="@color/msg_title_text_color"
            android:textSize="@dimen/text_size_18sp"/>


    </RelativeLayout>


    <FrameLayout
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <FrameLayout
                    android:id="@+id/first_fl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        >

                        <com.allipper.rentme.widget.CircleImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_below="@+id/imageView"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="4dp"
                            android:src="@mipmap/icon_defaultheader"/>

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="96dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="4dp"
                            android:drawableRight="@mipmap/sex_girl"
                            android:text="杨颖"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_16sp"/>

                        <TextView
                            android:id="@+id/constellation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/name"
                            android:layout_below="@+id/name"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="4dp"
                            android:text="双鱼座"
                            android:textColor="@color/text_normal"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/constellation"
                            android:text="福建福州"
                            android:textColor="@color/text_normal"
                            android:textSize="@dimen/text_size_14sp"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="2dp"
                        android:background="@mipmap/fee_bg"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/fee_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:padding="2dp"
                            android:paddingLeft="10dp"
                            android:text="￥300"
                            android:textColor="@color/text_red"
                            android:textSize="@dimen/text_size_15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="2dp"
                            android:padding="2dp"
                            android:text="/时"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_12sp"/>
                    </LinearLayout>
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_fl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rc_divider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="11dp"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="预约日期"
                            android:textColor="@color/text_normal"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="6dp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:onClick="chooseTime"
                            android:text="2015-10-05 17:30"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_15sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rc_divider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="11dp"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="预约时长"
                            android:textColor="@color/text_normal"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/duration"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="6dp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="3小时"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_15sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rc_divider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="11dp"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="出租范围"
                            android:textColor="@color/text_normal"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/offercontent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="逛街跟拍"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_15sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rc_divider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="11dp"
                            android:gravity="left|center_vertical"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="地点"
                            android:textColor="@color/text_normal"
                            android:textSize="@dimen/text_size_14sp"/>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/renterTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="10dp"
                                android:gravity="left|center_vertical"
                                android:text="出租人:"
                                android:textColor="@color/text_normal"
                                android:textSize="@dimen/text_size_12sp"/>

                            <TextView
                                android:id="@+id/locationTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginTop="16dp"
                                android:gravity="left|center_vertical"
                                android:text="见面地点:"
                                android:textColor="@color/text_normal"
                                android:textSize="@dimen/text_size_12sp"/>

                            <TextView
                                android:id="@+id/renter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/renterTitle"
                                android:layout_marginLeft="4dp"
                                android:layout_toRightOf="@+id/renterTitle"
                                android:gravity="left|center_vertical"
                                android:text="张三"
                                android:textColor="@color/text_dark"
                                android:textSize="@dimen/text_size_13sp"/>

                            <TextView
                                android:id="@+id/renterPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/renterTitle"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="8dp"
                                android:gravity="left|center_vertical"
                                android:text="15000000000"
                                android:textColor="@color/text_dark"
                                android:textSize="@dimen/text_size_13sp"/>

                            <TextView
                                android:id="@+id/meetLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/locationTitle"
                                android:layout_marginRight="8dp"
                                android:layout_toRightOf="@+id/locationTitle"
                                android:gravity="left|center_vertical"
                                android:text="福建省福州市台江区仓山万达广场负一层秘境咖啡厅"
                                android:textColor="@color/text_dark"
                                android:textSize="@dimen/text_size_13sp"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rc_divider"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rc_divider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="11dp"
                            android:gravity="left|center_vertical"
                            android:text="租金"
                            android:textColor="@color/text_normal"
                            android:textSize="@dimen/text_size_14sp"/>

                        <TextView
                            android:id="@+id/cost"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="￥900"
                            android:textColor="@color/text_red"
                            android:textSize="@dimen/text_size_18sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>