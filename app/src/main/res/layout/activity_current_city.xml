<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/TitleStyle">

        <TextView
            style="@style/TextTitleStyle"
            android:text="选择城市"/>

        <ImageButton
            style="@style/BackStyle"
            android:onClick="back"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="当前城市-"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_16sp"/>

        <Button
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/btn_background_press"
            android:onClick="location"
            android:text="定位"
            android:textSize="@dimen/text_size_12sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

            <com.allipper.rentme.common.view.SideBar
                android:id="@+id/select_alphabetButton"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#F2F2F2"
                android:clickable="true"/>

            <ListView
                android:id="@+id/select_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/select_alphabetButton"
                android:background="#FFFFFF"
                android:cacheColorHint="#00000000"
                android:divider="#D4D4D4"
                android:dividerHeight="0.5dp"
                android:overScrollFooter="@android:color/transparent"
                android:scrollbars="none"/>

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/select_alphabetButton"
                android:background="#DDD"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/text_normal"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D4D4D4"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/select_toast_layout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="#AA5D9DC5"
                android:visibility="gone">

                <TextView
                    android:id="@+id/section_toast_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
