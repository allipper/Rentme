<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <RelativeLayout
            android:id="@+id/title_top"
            style="@style/TitleStyle"
            android:layout_alignParentTop="true"
            android:background="@color/msg_title_background">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:onClick="back"
                android:padding="12dp"
                android:src="@mipmap/back"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="8dp"
                android:text="我的相册"
                android:textColor="@color/msg_title_text_color"
                android:textSize="@dimen/text_size_18sp"/>

            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:padding="6dp"
                android:src="@mipmap/home_filter"/>

            <Button
                android:id="@+id/cancel"
                style="@style/TopButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="取消"
                android:visibility="gone"/>
        </RelativeLayout>


        <GridView
            android:id="@+id/pictures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_top"
            android:layout_marginTop="8dp"
            android:cacheColorHint="@android:color/transparent"
            android:clipChildren="true"
            android:gravity="center"
            android:horizontalSpacing="3dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:verticalSpacing="3dp">
        </GridView>

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_alignParentBottom="true"
            android:background="#e0000000"
            android:clickable="true"
            android:visibility="gone">

            <Button
                android:id="@+id/selectAll"
                style="@style/TopButtonStyle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="全选"/>

            <Button
                android:id="@+id/delete"
                style="@style/TopButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="删除"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/picturebg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent_grey"
        android:visibility="gone">
        <Button
            android:id="@+id/close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_yellow"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp"/>

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.android.youhu.widget.NoRequsetGridView
                    android:id="@+id/bigPictures"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >
                </com.android.youhu.widget.NoRequsetGridView>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</FrameLayout>