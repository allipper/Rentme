            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.login.RegisterActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
