        <!-- 友盟 -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="563714b467e58e7539001aea"></meta-data>

        <meta-data
            android:name="UMENG_MESSAGE_SECRET"
            android:value="68190477d3aa00eebbd6dbd854f8b59f"></meta-data>

        <meta-data
